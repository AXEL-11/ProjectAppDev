<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPage">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:background="#F4F0F0"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="321dp"
            android:layout_height="35dp"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="20sp"
            android:layout_marginRight="30sp"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="284dp"
                android:layout_height="match_parent"
                android:background="@drawable/custom_edittext"
                android:hint="  Search Here....."
                android:onClick="onsearch"
                android:textColor="#000000"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/search" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:background="#F4F0F0"
            android:text="Popular"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="149dp">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:text="Recommendations"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="5sp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="185dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:background="@drawable/product"
                android:onClick="Onitem1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/productimg1"
                    android:layout_width="match_parent"
                    android:layout_height="109dp"
                    android:background="@drawable/above"
                    android:src="@drawable/monitorm8"
                    tools:srcCompat="@drawable/monitorm8" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bottom"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/productname1"
                        android:layout_width="match_parent"
                        android:layout_height="23dp"
                        android:text="M8 Smart Monitor"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/productprice1"
                        android:layout_width="match_parent"
                        android:layout_height="39dp"
                        android:text="₱18,990.00"
                        android:textColor="#9C27B0"
                        android:textSize="20sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/productimg1"
                    android:layout_width="match_parent"
                    android:layout_height="109dp"
                    android:background="@drawable/above"
                    tools:srcCompat="@drawable/keyboard"
                    android:src="@drawable/keyboard"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bottom"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/productname1"
                        android:layout_width="match_parent"
                        android:layout_height="23dp"
                        android:text="Leaven K620 Keyboard"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/productprice1"
                        android:layout_width="match_parent"
                        android:layout_height="39dp"
                        android:text=" ₱825.99"
                        android:textColor="#9C27B0"
                        android:textSize="20sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="5sp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="185dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/productimg1"
                    android:layout_width="match_parent"
                    android:layout_height="109dp"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/productname1"
                    android:layout_width="match_parent"
                    android:layout_height="23dp"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/productprice1"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:text="TextView" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/productimg1"
                    android:layout_width="match_parent"
                    android:layout_height="109dp"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/productname1"
                    android:layout_width="match_parent"
                    android:layout_height="23dp"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/productprice1"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:text="TextView" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20sp"
            android:background="@drawable/custommenu"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="118dp"
                android:layout_height="40dp"
                android:layout_marginTop="10sp"
                android:layout_weight="1"
                tools:srcCompat="@drawable/shoppingcart1"
                android:src="@drawable/shoppingcart1"/>

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="118dp"
                android:layout_height="40dp"
                android:layout_marginTop="10sp"
                android:layout_weight="1"
                tools:srcCompat="@drawable/chat1"
                android:src="@drawable/chat1"/>

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="118dp"
                android:layout_height="40dp"
                android:layout_marginTop="10sp"
                android:layout_weight="1"
                tools:srcCompat="@drawable/home1"
                android:src="@drawable/home1"/>

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="118dp"
                android:layout_height="40dp"
                android:layout_marginTop="10sp"
                android:layout_weight="1"
                tools:srcCompat="@drawable/bell1"
                android:src="@drawable/bell1"/>

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="118dp"
                android:layout_height="40dp"
                android:layout_marginTop="10sp"
                android:layout_weight="1"
                tools:srcCompat="@drawable/user1"
                android:src="@drawable/user1"/>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>